<Window
    x:Class="ClipExtended.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ClipExtended.Controls"
    xmlns:datatransfer="using:Windows.ApplicationModel.DataTransfer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel.Resources>
            <DataTemplate x:Key="ClipboardListView_ItemTemplate" 
                          x:DataType="datatransfer:DataPackageView">
                <local:ClipboardItem ClipboardContent="{x:Bind}"/>
            </DataTemplate>
        </StackPanel.Resources>
        <ListView x:Name="ClipboardListView" 
                  ItemTemplate="{StaticResource ClipboardListView_ItemTemplate}"/>
    </StackPanel>
</Window>
